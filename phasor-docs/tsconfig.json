{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": ["es6", "dom"],
        "strict": true,
        "esModuleInterop": true,
		"moduleResolution": "node",
        "outDir": "scripts",
        "rootDir": "./src",
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": ["src/*.ts"],
    "exclude": [
        "node_modules"
    ]
}